{
  "private": true,
  "scripts": {
    "start:dev": "nodemon app/server.js",
    "format:code": "prettier --write **/*.js",
    "format:package-json": "prettier-package-json --write"
  },
  "dependencies": {
    "apollo-server": "2.9.7",
    "apollo-server-express": "2.9.7",
    "bcrypt": "5.0.0",
    "cors": "2.8.5",
    "cuid": "2.1.6",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "graphql": "14.5.8",
    "jsonwebtoken": "8.5.1",
    "mongodb": "3.3.3",
    "nodemon": "1.19.4"
  },
  "devDependencies": {
    "eslint": "6.6.0",
    "eslint-plugin-unicorn": "12.1.0",
    "prettier": "1.18.2",
    "prettier-package-json": "2.1.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:unicorn/recommended"
    ],
    "env": {
      "node": true
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "always",
    "trailingComma": "es5"
  }
}
